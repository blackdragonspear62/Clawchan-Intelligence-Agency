{
  "name": "clawchan-intelligence-agency",
  "version": "2.0.0-alpha",
  "description": "Global Situational Awareness & Predictive Intelligence Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend/nodejs",
    "ml"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:ml\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend/nodejs && npm run dev",
    "dev:ml": "cd ml && python3 -m uvicorn main:app --reload",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend/nodejs && npm run build",
    "test": "npm run test:unit && npm run test:e2e && npm run test:integration",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:integration": "cd tests/integration && ./run-tests.sh",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker-compose -f infra/docker/docker-compose.yml build",
    "docker:up": "docker-compose -f infra/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infra/docker/docker-compose.yml down",
    "k8s:deploy": "kubectl apply -f infra/kubernetes/",
    "terraform:init": "cd infra/terraform && terraform init",
    "terraform:plan": "cd infra/terraform && terraform plan",
    "terraform:apply": "cd infra/terraform && terraform apply",
    "security:audit": "npm audit && cd backend/python && pip-audit",
    "security:scan": "snyk test && trivy filesystem .",
    "load:test": "k6 run tests/load/load-test.js",
    "docs:build": "cd docs && mkdocs build",
    "docs:serve": "cd docs && mkdocs serve"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clawchan/agency-dashboard.git"
  },
  "keywords": [
    "intelligence",
    "surveillance",
    "geospatial",
    "adsb",
    "satellite",
    "real-time",
    "threejs",
    "react",
    "typescript"
  ],
  "author": "Clawchan Intelligence Agency",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
