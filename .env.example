# =============================================================================
# CLAWCHAN INTELLIGENCE AGENCY - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control!
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================
NODE_ENV=development
PORT=8080
API_VERSION=v2
LOG_LEVEL=debug

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL - Primary database
DATABASE_URL=postgresql://username:password@localhost:5432/clawchan
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=5000

# Redis - Caching & session store
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB - Document store for unstructured data
MONGODB_URL=mongodb://localhost:27017/clawchan
MONGODB_DB=clawchan

# =============================================================================
# External API Keys
# =============================================================================
# Google Cloud Platform (required for satellite imagery & Earth AI)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CLOUD_PROJECT_ID=your_project_id

# CoinGecko (for cryptocurrency data - free tier available)
COINGECKO_API_KEY=

# OpenSky Network (for aircraft data - optional)
OPENSKY_USERNAME=
OPENSKY_PASSWORD=

# =============================================================================
# Security Settings
# =============================================================================
# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Monitoring & Observability
# =============================================================================
# Sentry (error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Jaeger (distributed tracing)
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable specific intelligence modules
ENABLE_AIRCRAFT_TRACKING=true
ENABLE_SATELLITE_TRACKING=true
ENABLE_DISASTER_MONITORING=true
ENABLE_ECONOMIC_WARFARE=true
ENABLE_LIVE_INTEL=true
ENABLE_EARTH_AI=true
ENABLE_TRAFFIC_SURVEILLANCE=true

# =============================================================================
# Performance Tuning
# =============================================================================
# Cache TTL (in seconds)
CACHE_TTL_AIRCRAFT=2
CACHE_TTL_SATELLITE=10
CACHE_TTL_DISASTER=60
CACHE_TTL_CRYPTO=30

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=10000

# =============================================================================
# Development Settings
# =============================================================================
# Hot reload
HOT_RELOAD=true

# Debug mode
DEBUG=true

# Mock data (use when APIs are unavailable)
USE_MOCK_DATA=false

# =============================================================================
# Deployment Settings
# =============================================================================
# Docker
DOCKER_REGISTRY=ghcr.io/clawchan
DOCKER_TAG=latest

# Kubernetes
KUBE_NAMESPACE=clawchan
KUBE_CONTEXT=minikube

# AWS (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Terraform
TF_VAR_environment=development
TF_VAR_region=us-east-1
